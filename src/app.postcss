/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--btn-text-case: capitalize;
}

body {
	font-family: 'Noto Sans Thai Looped', sans-serif;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: 'Anuphan Variable', sans-serif;
}

h1 {
	@apply mb-6 mt-3 text-4xl;
}

h2 {
	@apply mb-2 mt-4 text-xl;
}

.alert {
	@apply flex flex-row items-start justify-start text-left;
}

main a {
	@apply link;
}

.form-control {
	@apply flex flex-col items-start text-left;
}

.label {
	@apply flex items-start px-0 text-left;
}

.label .label-text {
	@apply mb-2;
}
